
# Node.js Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# DocuSign Authentication
DOCUSIGN_INTEGRATION_KEY=YOUR_INTEGRATION_KEY
DOCUSIGN_SECRET_KEY=YOUR_SECRET_KEY
DOCUSIGN_USER_ID=YOUR_USER_ID
DOCUSIGN_ACCOUNT_ID=YOUR_ACCOUNT_ID
DOCUSIGN_BASE_URI=https://demo.docusign.net/restapi
DOCUSIGN_AUTH_SERVER=https://account-d.docusign.com
DOCUSIGN_REDIRECT_URI=http://localhost:3000/docusign/callback
DOCUSIGN_PRIVATE_KEY_PATH=./private.key

# DocuSign Webhook Configuration
DOCUSIGN_WEBHOOK_URL=https://your-webhook-url/docusign/webhook
DOCUSIGN_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/docusign_data
MONGODB_USER=
MONGODB_PASSWORD=

# Email Settings (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-gmail-address@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-gmail-address@gmail.com

# API Integration
API_URL=https://your-api-endpoint.com/data
API_KEY=YOUR_API_KEY